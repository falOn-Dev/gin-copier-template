services:
  app:
    build: .
    ports:
      - 8080:8080
    volumes:
      - .:/{{ project_name }}
    env_file: ".env"
{% if database %}
    depends_on:
      - db

  db:
    image: postgres:16-alpine
    ports:
      - 5432:5432
    env_file: ".env"
    volumes:
      - pgdata:/var/lib/postgresql/data

volumes:
  pgdata:

{% endif %}
